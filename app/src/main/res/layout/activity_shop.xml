<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".ShopActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Character Shop"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#fff"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="30sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/diamond"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/coins"
        android:layout_marginTop="104dp"
        android:layout_marginLeft="5dp"/>

    <ImageButton
        android:id="@+id/home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/back"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/free_relative"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ghost2"/>

                </RelativeLayout>


            <RelativeLayout
                android:id="@+id/ghost1b_relative"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ghost1b"/>

                <RelativeLayout
                    android:id="@+id/lock1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DC9E9E9E">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="LOCKED"
                        android:textColor="#000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/price_ghost1b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_toRightOf="@id/price_ghost1b"
                        android:src="@drawable/diamond"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="3dp"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/devil_relative"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/devil1"/>

                <RelativeLayout
                    android:id="@+id/lock2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DC9E9E9E">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="LOCKED"
                        android:textColor="#000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/price_devil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_toRightOf="@id/price_devil"
                        android:src="@drawable/diamond"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="3dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frank_relative"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/frankenstein1"/>

                <RelativeLayout
                    android:id="@+id/lock3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DC9E9E9E">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="LOCKED"
                        android:textColor="#000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/price_frank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_toRightOf="@id/price_frank"
                        android:src="@drawable/diamond"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="3dp"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/pumpking_relative"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pumpkin1"/>

                <RelativeLayout
                    android:id="@+id/lock4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DC9E9E9E">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="LOCKED"
                        android:textColor="#000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/price_pumpking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_toRightOf="@id/price_pumpking"
                        android:src="@drawable/diamond"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="3dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/clown_relative"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/clown1"/>

                <RelativeLayout
                    android:id="@+id/lock5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DC9E9E9E">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="LOCKED"
                        android:textColor="#000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/price_clown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_toRightOf="@id/price_clown"
                        android:src="@drawable/diamond"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="3dp"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>